{
	"name": "@redstinkcreature/lib-database",
	"version": "0.1.0",
	"exports": "./mod.ts",
	"tasks": {
		"dev": "DENO_FUTURE=1 DENO_ENV=development deno run --watch --allow-net --allow-read --allow-env --allow-sys ./src/main.ts",
		"dev:prd": "DENO_ENV=production deno run --watch --allow-net --allow-read --allow-env --allow-sys ./src/main.ts",
		"test": "DENO_ENV=test deno test --allow-all ./src/**/*.test.ts",
		"repl": "DENO_ENV=repl deno run --watch --allow-all ./src/util/repl.ts",
		"build": "deno run --allow-all ./src/build.ts",
		"prisma:sqlite:generate": "deno run -A npm:prisma@latest generate --schema=./src/prisma/sqlite/schema.prisma",
		"prisma:sqlite:migrate": "SQLITE_URL=file:./dev.db prisma migrate dev --name init  --schema=./src/prisma/sqlite/schema.prisma",
		"prisma:clean": "rm ./package.json && rm ./package-lock.json"
	},
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"imports": {
		"@nestjs/common": "npm:@nestjs/common@10",
		"@nestjs/core": "npm:@nestjs/core@10",
		"@nestjs/platform-express": "npm:@nestjs/platform-express@10",
		"@nestjs/testing": "npm:@nestjs/testing@10",
		"@nestjs/typeorm": "npm:@nestjs/typeorm@10",
		"typeorm": "npm:typeorm",
		"@redstinkcreature/lib-utilities": "jsr:@redstinkcreature/lib-utilities@^0.3.3",
		"dotenv": "jsr:@std/dotenv@0.224.0",
		"rxjs": "npm:rxjs@7",
		"std/assert": "jsr:@std/assert@0.224.0",
		"std/fs": "jsr:@std/fs@0.224.0",
		"std/path": "jsr:@std/path@0.224.0",
		"zod": "npm:zod@3",
		"prisma": "npm:prisma@latest",
		"@prisma/client": "npm:@prisma/client@5",
		"pg": "npm:pg@8"
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 4,
		"semiColons": true,
		"singleQuote": true,
		"proseWrap": "preserve",
		"include": [
			"src/"
		]
	},
	"lint": {
		"include": [
			"src/"
		],
		"rules": {
			"tags": [
				"recommended"
			]
		}
	}
}

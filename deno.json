{
    "name": "@redstinkcreature/lib-utilities",
    "version": "0.3.0",
    "exports": "./index.ts",
    "tasks": {
        "dev": "DENO_FUTURE=1 DENO_ENV=development deno run --watch --allow-net --allow-read --allow-env --allow-sys ./src/main.ts",
        "dev:prd": "DENO_ENV=production deno run --watch --allow-net --allow-read --allow-env --allow-sys ./src/main.ts",
        "test": "DENO_ENV=test deno test --allow-all ./src/**/*.test.ts",
        "repl": "DENO_ENV=repl deno run --watch --allow-all ./src/util/repl.ts"
    },
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true       
    },
    "imports": {
        "@redstinkcreature/lib-utilities": "jsr:@redstinkcreature/lib-utilities",
        "@nestjs/common": "npm:@nestjs/common@10",
        "@nestjs/core": "npm:@nestjs/core@10",
        "@nestjs/platform-express": "npm:@nestjs/platform-express@10",
        "rxjs": "npm:rxjs@7",
        "dotenv": "jsr:@std/dotenv",
        "zod": "npm:zod@3",
        "@nestjs/testing": "npm:@nestjs/testing@10",
        "std/assert": "jsr:@std/assert",
        "std/path": "jsr:@std/path",
        "std/fs": "jsr:@std/fs"
    },
    "fmt": {
        "useTabs": true,
        "lineWidth": 80,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": true,
        "proseWrap": "preserve",
        "include": [
            "src/"
        ]
    },
    "lint": {
        "include": [
            "src/"
        ],
        "rules": {
            "tags": [
                "recommended"
            ]
        }
    }
}